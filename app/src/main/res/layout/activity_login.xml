<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_top_cyan"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/decor" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_top_orange"
        android:scaleType="fitXY"
        android:layout_marginTop="-15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/decor" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_bottom_cyan"
        android:scaleType="fitXY"
        android:layout_marginBottom="-40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/decor" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_bottom_orange"
        android:scaleType="fitXY"
        android:layout_marginBottom="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/decor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/shopline"
            android:textColor="@color/main_orange"
            android:textSize="24sp"
            android:fontFamily="@font/sora_extrabold"
            app:drawableTopCompat="@drawable/logo" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/asset_edit_text"
            android:hint="@string/phone_number"
            android:textSize="14sp"
            android:fontFamily="@font/sora_regular"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="50dp"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/main_orange"
            android:inputType="numberDecimal"
            android:importantForAutofill="no" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/asset_edit_text"
            android:hint="@string/password"
            android:textSize="14sp"
            android:fontFamily="@font/sora_regular"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawableEnd="@drawable/ic_baseline_visibility_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/main_orange"
            android:inputType="textPassword"
            android:importantForAutofill="no" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="260dp"
        android:layout_height="50dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/sora_bold"
        android:background="@drawable/asset_button_fill"
        android:elevation="20dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>